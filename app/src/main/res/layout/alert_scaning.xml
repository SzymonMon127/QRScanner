<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_5mdp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/editext_message"
        android:layout_width="match_parent"
        android:padding="@dimen/_5mdp"
        android:layout_marginTop="@dimen/_5mdp"
        android:hint="Wybierz datÄ™"
        android:textColor="@color/md_black_1000"
        android:layout_marginStart="@dimen/_10mdp"
        android:textSize="@dimen/_12font_mdp"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="75dp"
        android:id="@+id/btn_date1"
        android:hint="DD-MM-RR"
        android:maxLength="8"
        android:layout_gravity="center"
        android:gravity="center"
        android:inputType="date"
        android:textAllCaps="false"
        android:textSize="@dimen/_18font_mdp"
        android:background="@color/buttonColor"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_10mdp"
        android:layout_marginHorizontal="@dimen/_25mdp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_10mdp"
            android:layout_marginEnd="@dimen/_25mdp"
            android:background="@drawable/button6_bg"
            android:padding="@dimen/_2mdp"
            android:text="Dodaj"
            android:textColor="@color/white"
            android:textSize="@dimen/_14font_mdp" />

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/_25mdp"
            android:layout_marginTop="@dimen/_10mdp"
            android:background="@drawable/button6_bg"
            android:padding="@dimen/_2mdp"
            android:text="Anuluj"
            android:textColor="@color/white"
            android:textSize="@dimen/_14font_mdp" />
    </RelativeLayout>


</LinearLayout>